generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Gost {
  id          Int           @id @default(autoincrement())
  ime         String
  prezime     String
  email       String        @unique
  telefon     String?
  rizervacija Rezervacija[]
}

model Korisnik {
  id      Int     @id @default(autoincrement())
  email   String  @unique
  ime     String?
  lozinka String?
  uloga   String  @default("admin")
}

/// This table contains exclusion constraints and requires additional setup for migrations. Visit https://pris.ly/d/exclusion-constraints for more info.
model Rezervacija {
  id         Int      @id @default(autoincrement())
  gostId     Int
  prijava    DateTime
  odjava     DateTime
  status     String
  kreirano   DateTime @default(now())
  azurirano  DateTime
  broj_osoba Int      @default(1)
  sobaBroj   String
  gost       Gost     @relation(fields: [gostId], references: [id])
}

model Soba {
  id        Int      @id @default(autoincrement())
  broj      String   @unique
  tip       String
  opis      String
  kapacitet Int
  cena      Float
  slike     String[]
  tip_en    String
  opis_en   String
}

model Student {
  id  Int    @id @default(autoincrement())
  ime String
}
